<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user.email %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %> </br>
<div class="fb-share-button" data-href="https://localhost:3000/" data-layout="button" data-size="large" data-mobile-iframe="true"><a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Flocalhost.3000%2F&amp;src=sdkpreparse">Share</a></div>
<%= social_share_button_tag(@post.title, :url => "http://facebook.com") %>


<%= render 'comments/form', comment: @comment %>

<% @comments.each do |comment| %>
  <p><%= comment.user.email %> - <%= comment.created_at.to_date %></p>
  <p><%= comment.content %></p>
<% end %>
